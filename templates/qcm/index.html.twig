<!DOCTYPE html>
<html>
<head>
    <title>QCM Page</title>
    <style>
        .flag-item {
            cursor: pointer;
            padding: 10px;
            margin: 5px;
            border: 1px solid #ddd;
            display: inline-block;
        }
        .flag-item:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
<h1>Select a Flag</h1>
<ul id="flags-list"></ul>

<h2>Selected Flag</h2>
<div id="selected-flag">
    <p>No flag selected yet.</p>
</div>

<script>
    // Fetch flags data from the API
    fetch('http://127.0.0.1:8000/api/flags')
        .then(response => response.json())
        .then(data => {
            const list = document.getElementById('flags-list');
            data.forEach(flag => {
                const li = document.createElement('li');
                li.classList.add('flag-item');
                li.textContent = `${flag.name}: ${flag.flag}`;

                // Add click event to each flag item
                li.addEventListener('click', function() {
                    // Show the selected flag
                    document.getElementById('selected-flag').innerHTML = `
                            <p>You selected: ${flag.name} ${flag.flag}</p>
                        `;
                });

                list.appendChild(li);
            });
        })
        .catch(error => console.error('Error fetching flags:', error));
</script>
</body>
</html>
